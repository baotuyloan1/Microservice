pipeline {
    agent any

    stages {
        stage('Build Jar') {
            agent {
                docker {
                    image 'maven:3.9.9-amazoncorretto-8-al2023'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    mvn -version
                    mvn -f Accounts/pom.xml clean install
                '''
            }
        }
        stage('Build image') {
            steps {
                sh '''
                 # get current day in yyMMdd
                TAG=$(date +'%y%m%d')
                echo "Building Docker image with tag: $TAG"
                docker build . -t baotuyloan1/accounts:$TAG
                '''
            }
        }
    }
}
